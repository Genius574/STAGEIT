<div class="container my-5">
  <%= simple_form_for(@item) do |f| %>
    <%= f.input :name %>
    <%= f.input :category, collection: [["Event Setup", "event_set_up"], ["Sound System", "sound_system"]], prompt: "Select a category" %>  <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class: "btn btn-success"%>
  <% end %>
</div>
